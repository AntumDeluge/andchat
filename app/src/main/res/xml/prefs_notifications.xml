    <CheckBoxPreference android:title="@string/pref_title_notif_vibrate" android:key="@string/pref_notif_vibrate" android:summary="@string/pref_summary_notif_vibrate" android:dependency="@string/pref_show_notif" android:defaultValue="true" />
    <net.andchat.donate.View.MultiChoicePreference android:entries="@array/notification_events" android:title="@string/pref_title_vibrate_events" android:key="@string/pref_notif_vibrate_for" android:summary="@string/pref_summary_vibrate_events" android:dependency="@string/pref_notif_vibrate" android:defaultValue="@string/all_notification_events" android:entryValues="@array/notification_events_values" />
</PreferenceScreen>